<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
	<TableRow android:layout_width="fill_parent" >
            <TextView
                android:layout_span="3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Specifique" />
       </TableRow>
       <TableRow android:layout_width="fill_parent" >

            <Button
                android:id="@+id/specbtnresetvma"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="resetVMA"
                android:text="Reset" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:text="VMA" />

            <EditText
                android:id="@+id/spectxtvma"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" 
                android:ems="5"
               />
        </TableRow>
        
       <TableRow android:layout_width="fill_parent">
           <Spinner
            android:layout_span="3"
	        android:id="@+id/specdistdropdown"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:entries="@array/specifique_distances" />
       </TableRow>
       <TableRow android:layout_width="fill_parent">
          
           <TextView
               android:ems="5"
                android:id="@+id/specpercentage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
           <TextView
               android:ems="5"
                android:id="@+id/specpercentage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
       </TableRow>
       <TableRow android:layout_width="fill_parent">
           
           <TextView
               android:ems="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spectemps1" />
           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Temps" />
           <TextView
               android:ems="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spectemps2" />
       </TableRow>
       <TableRow android:layout_width="fill_parent">
           
           <TextView
               android:ems="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/specspeed1" />
           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Km/h" />
           <TextView
               android:ems="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/specspeed2" />
       </TableRow>
       <TableRow android:layout_width="fill_parent">
           
           <TextView
                android:ems="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/specpace1" />
           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="min/km" />
           <TextView
                android:ems="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/specpace2" />
       </TableRow>
       <View
            android:layout_height="2.0dip"
            android:background="#ffff0000" />

        <TableRow>

            <Button
                android:id="@+id/specbackbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="closeAppli"
                android:text="Back" />
            
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" " />

            <Button
                android:id="@+id/speccalcul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="startCalculSpecifique"
                android:text="Calcul" />
        </TableRow>
        
    </TableLayout>
</RelativeLayout>